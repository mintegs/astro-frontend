---
import type { AuthOverlay } from "../../../../types";

const {title, content} = Astro.props as AuthOverlay;
---
<div class="relative auth-full-bg">
    <div class="absolute inset-0 bg-overlay"></div>
    <div class="relative flex flex-col h-full">
        <div class="my-auto">
            <div class="flex justify-center">
                <div class="lg:w-7/12">
                    <div class="text-center">
                        <div>
                            <h5 class="text-white text-xl">{title}</h5>
                            <p class="text-gray-200 mt-2">{content}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>